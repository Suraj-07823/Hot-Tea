{
  "name": "hot-tea-site-local",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npx http-server ./ -p 8080 -c-1",
    "build": "node build.js",
    "check:pa11y": "npx pa11y-ci",
    "check:lhci": "npx @lhci/cli autorun --upload.target=temporary-public-storage",
    "deploy:netlify": "npx netlify-cli deploy --dir=dist --prod --site=$NETLIFY_SITE_ID --auth=$NETLIFY_AUTH_TOKEN"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^5.1.15",
    "esbuild": "^0.19.4",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.7",
    "html-minifier-terser": "^7.0.0",
    "postcss": "^8.4.23",
    "sharp": "^0.32.5"
  }
}